@model IEnumerable<Carro>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>
    @ViewData["Title"]
</h1>

<form method="post" action="Carros/Search">
    <label for="TextoAPesquisar">Pesquisa de carros:</label>
    <input type="text" id="TextoAPesquisar" name="TextoAPesquisar"
           placeholder="texto a procurar" />
    <select name="CategoriaId" asp-items="ViewBag.CategoriaId"></select>
    <button id="botaoPesquisa" type="submit" class="btn btn-default">
        🔍
    </button>
</form>

<p>
    <a asp-action="Create">Adicionar Carro</a>
</p>
<a asp-action="Index">Todos</a>
<a asp-action="Index" asp-route-disponivel="true">Activos</a>
<a asp-action="Index" asp-route-disponivel="false">Inativos</a>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                <p>Nome Carro</p>
            </th>
            <th>
                <p>Disponivel</p>
            </th>
            <th>
                <p>Categoria</p>
            </th>
            <th>
                <p>Kilometros</p>
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disponivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kilometros)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a> |
                    <a asp-area="" asp-controller="Reservas" asp-action="Create">Comprar</a>
                </td>
            </tr>
        }
    </tbody>
</table>